@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 style="text-align: center;">Products @Html.ActionLink("Add", "Create", 
        "Product", null, new { @class= "create-btn"})</h1>
    <div class=flex-parent>
        @foreach(var product in Model)
        {
            <div class="flex-item">
                <img class="product-img" onclick="imgClick(@product.Id)" src="@product.Image">
                <h5>@product.Name</h5>
                <div class="add-to-cart">
                    <h6 class="add-to-cart-item">$@product.Price</h6>
                    @*<button class="add-to-cart-item">♡</button>
                <button class="add-to-cart-item">🛒</button>*@
                    @Html.ActionLink("♡", "AddToFavorites", "Product", null, new { @class= "add-to-cart-item"} )
                    @Html.ActionLink("🛒", "AddToCart", "Product", null, new { @class= "add-to-cart-item"})
                </div>
            </div>
        }
    </div>
</div>

